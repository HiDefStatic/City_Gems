<div id="explore">
  <h2>Explore</h2>
  <em>What do you want to experience today?</em>

  <%= search_form_for @q do |f| %>
    <%= f.label :pintag, 'something:' %>
    <%= f.collection_select(:pintags_tag_id_eq, Tag.all, :id, :label, prompt: 'tags', include_blank: 'All') %><br>
    <%= f.label :name_or_appeal_or_user_first_name_or_user_last_name_cont, "Search Gems" %>
    <%= f.search_field :name_or_appeal_or_user_first_name_or_user_last_name_cont, placeholder: "name, appeal, user" %>

    <div id="filter-submit">
      <%= f.submit %>
    </div>
  <% end %>
 </div>
