<div class="pintag-form-container">
  <p>Tag this Gem</p>
  <div class="pintag-form">
    <%= form_for :pintag, url: pintags_path, method: :post, remote: true do |f| %>
      <%= f.collection_select(:tag_id, Tag.all, :id, :label, {:prompt => 'Choose a category'}, {:required => true}) %>
      <%= f.hidden_field :pin_id, :value => @pin.id %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= f.submit 'Add Tag', class: 'btn btn-md btn-success' %>
    <% end %>
  </div>
</div>
